<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="20sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25sp"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_collapseParallaxMultiplier="1.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/event"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_centerVertical="true"
                android:layout_margin="10sp"
                android:contentDescription="@string/thumbsuptask"
                android:src="@drawable/ic_action_event" />

            <TextView
                android:id="@+id/title_card"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/date_card"
                android:layout_alignStart="@+id/date_card"
                android:layout_marginTop="35sp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/h"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_card"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title_card"
                android:layout_alignStart="@+id/title_card"
                android:layout_below="@+id/title_card"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/h"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/date_card"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_card"
                android:layout_toEndOf="@+id/event"
                android:layout_toRightOf="@+id/event"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/h"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="@string/thumbsuptask"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/card_id_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_style"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/h"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/date_main_heading"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:background="@drawable/my_style"
        android:elevation="11sp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/h"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</RelativeLayout>